<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Xamarin.RangeSlider.Forms;assembly=Xamarin.RangeSlider.Forms"
             x:Class="Estately.Views.FilterPage"
             Title="Filtering">
    <ContentPage.Content>
        <ScrollView>
            <Grid x:Name="Grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Padding="10,10,0,0" FontSize="Medium" TextColor="Black" Text="Type"/>
                <Picker x:Name="TypePicker" Grid.Row="1" Margin="10,0,10,0" FontSize="Medium" Title="Select a Type"/>
                <Label Grid.Row="2" Padding="10,0,0,0" FontSize="Medium" TextColor="Black" Text="Location"/>
                <Entry x:Name="LocationEntry" Grid.Row="3" Placeholder="Enter Location" Margin="10,0,10,0"/>
                <Label Text="Price" Padding="10,0,0,0" Grid.Row="4" FontSize="Medium" TextColor="Black"/>
                <forms:RangeSlider Margin="10,0,10,0" Grid.Row="5" x:Name="PriceSlider" MinimumValue="0" MaximumValue="500000" LowerValue="0"
                                   UpperValue="500000" StepValue="1000" VerticalOptions="Center" ShowTextAboveThumbs="True"
                                   MaterialUI="True" TextSize="Medium" TextColor="Black"/>
                <Label Text="Size" Padding="10,0,0,0" Grid.Row="6" FontSize="Medium" TextColor="Black"/>
                <forms:RangeSlider Margin="10,0,10,0" Grid.Row="7" x:Name="SizeSlider" MinimumValue="0" MaximumValue="100000" LowerValue="0"
                                   UpperValue="100000" StepValue="100" VerticalOptions="Center" ShowTextAboveThumbs="True"
                                   MaterialUI="True" TextSize="Medium" TextColor="Black"/>
                <Button x:Name="FilterButton" Grid.Row="10" VerticalOptions="Center" Margin="100,0,100,0" HeightRequest="50" Clicked="FilterButtonClicked" Text="Filter" TextColor="White" BackgroundColor="Blue"/>
                <Label x:Name="l1" Grid.Row="8"/>
                <Label x:Name="l2" Grid.Row="9"/>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>